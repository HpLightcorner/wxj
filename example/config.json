{
    "name": "wxJ Framework",

    "settings": {
        "size": {
            "width": 960,
            "height": 600
        },

        "bg": "./ressources/bg.png",
        "frameless": false
    },

    "layout": [
        {
            "type": "label",
            "pos": {
                "x": 450,
                "y": 60
            },
            
            "size": {
                "width": 50,
                "height": 50
            },

            "bindings": [
                {
                    "tag": "data",
                    "pointer": "/counter"
                }
            ],

            "label": "{}"
        },
        {
            "type": "label",
            "pos": {
                "x": 100,
                "y": 60
            },
            
            "size": {
                "width": 50,
                "height": 50
            },

            "bindings": [
                {
                    "tag": "data",
                    "pointer": "/cs2"
                }
            ],

            "label": "CS2: {}"
        },
        {
            "type": "label",
            "pos": {
                "x": 10,
                "y": 500
            },
            
            "size": {
                "width": 960,
                "height": 50
            },

            "bindings": [
                {
                    "tag": "data",
                    "pointer": "/name"
                },
                {
                    "tag": "data",
                    "pointer": "/counter"
                }
            ],

            "label": "This is a fmt compatible format string, name {}, counter {}"
        },
        {
            "type": "button",
            "label": "Button 1",
            "bind": "increaseCounter",

            "bg": {
                "default": "./ressources/button.png",
                "pressed": "./ressources/button2.jpg",
                "current": "./ressources/button3.jpg"
            },

            "pos": {
                "x": 450,
                "y": 10
            },
            
            "size": {
                "width": 50,
                "height": 50
            }
        },
        {
            "type": "button",
            "label": "Button 2",
            "bind": "decreaseCounter",
            "bg": {
                "default": "./ressources/button.png",
                "pressed": "./ressources/button2.jpg"
            },

            "pos": {
                "x": 10,
                "y": 10
            },
            
            "size": {
                "width": 50,
                "height": 50
            }
        }
    ]
}